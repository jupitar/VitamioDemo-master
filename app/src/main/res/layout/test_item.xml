<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"

    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="10dp"
    android:layout_marginLeft="10dp"

    android:orientation="vertical"
    tools:context="activity.MainActivity">
    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:text="考试题目"/>

    <RadioGroup
        android:id="@+id/choicegroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginLeft="20dp"

        >

        <RadioButton
            android:id="@+id/choiceA"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:paddingLeft="20dp"
            android:text="A.选择题"
            android:enabled="false"


            />


        <RadioButton
            android:id="@+id/choiceB"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="B.选择题"
            android:layout_marginTop="20dp"
            android:paddingLeft="20dp"
            android:enabled="false"
            />

        <RadioButton
            android:id="@+id/choiceC"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="C.选择题"
            android:layout_marginTop="20dp"
            android:paddingLeft="20dp"
            android:enabled="false"
            />
        <RadioButton
            android:id="@+id/choiceD"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:paddingLeft="20dp"
            android:text="D.选择题"


            />
    </RadioGroup>
    <LinearLayout
        android:id="@+id/comment_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="30dp"
        android:orientation="vertical"
        android:visibility="invisible"

       >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:orientation="horizontal"
            >
            <TextView
                android:id="@+id/judeg_head"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="正确答案为："/>
            <TextView
                android:id="@+id/test_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="A"
                android:textColor="#FF3ED21C"
                />
            <TextView
                android:id="@+id/test_end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="你的答案为："
                 />

            <TextView
                android:id="@+id/test_your"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="B"
                android:layout_marginLeft="10dp"
                android:textColor="#d13b12"
                />



        </LinearLayout>




        <TextView
            android:id="@+id/analize"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:text="分析题干，易得答案为C"

            android:gravity="left" />

    </LinearLayout>



</LinearLayout>


