<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"



    tools:context="activity.MainActivity">
    <include
        android:id="@+id/set_top"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        layout="@layout/top_back"

        ></include>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_below="@id/set_top"
        android:layout_marginTop="30dp">
        <TextView

            android:id="@+id/tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:gravity="center"
            android:text="跟我一起学C"
            android:textSize="20sp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_below="@id/tv"
            android:gravity="center"
            android:text="Version 1.0.0"
            android:textColor="#f21105"
            android:textSize="20sp"/>

    </RelativeLayout>

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
       android:layout_centerInParent="true"
        android:src="@drawable/logo"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="40dp">
        <TextView
            android:id="@+id/qq"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="QQ群:2994752392"
            android:textColor="#FF101010"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@id/qq"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="10dp"
            android:text="Copyright @2017 jupitarwp.com All right reserved"
            android:textSize="15sp"
            />

    </RelativeLayout>





    </RelativeLayout>


